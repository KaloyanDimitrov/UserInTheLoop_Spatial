<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.kaloyan.interfaceuserinloop.OptionsActivity"
    tools:showIn="@layout/activity_options"
    android:background="#345069"
    android:clickable="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_row="1"
        android:layout_column="11">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share your GPS position and Signal Strength to improve the accuracy of this application(anonymously)"
            android:id="@+id/boxShareInfo"
            android:checked="true"
            android:background="#345069"
            android:clickable="true"
            android:enabled="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#ffccff"
            android:layout_marginTop="40dp" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/modeBar"
            android:layout_gravity="center_horizontal"
            android:background="#222222"
            android:layout_marginTop="80dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Select mode: \n 0 - Heat Map, 1 - Cell Towers,\n 2 - Send To Better Location"
            android:id="@+id/modeText"
            android:textColor="#cc22ee"
            android:layout_marginTop="10dp" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/meterBar"
            android:layout_gravity="center_horizontal"
            android:background="#222222"
            android:layout_marginTop="40dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Distance in meters you are willing to walk(max 500)"
            android:id="@+id/distanceText"
            android:layout_marginTop="10dp"
            android:textColor="#cc22ee" />

    </LinearLayout>

</RelativeLayout>
